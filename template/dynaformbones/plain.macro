{%- macro plainbone( bone_name,bone,value ) -%}
<!-- ############################### Plain ####################################### -->	
	{% if bone.visible %}
		{% if bone.type == "selectone" or bone.type == "selectmulti"   %}
			<p>{{value.descr}}</p>
		{% elif bone.type == "bool"%}
		  ##if value
		  	<p><strong>{{_('yes')}}</strong></p>
		  ##else
		  <p>{{_('no')}}</p>
		  ##endif
		{% else %}
			<p>{{value}}</p>
		{% endif %}
	{% endif %}
{%- endmacro -%}
